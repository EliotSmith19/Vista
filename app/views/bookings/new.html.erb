<div class="my-container">
  <div class="my-form">
    <h1 class="text-center mb-4">Request a Booking</h1>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <%= simple_form_for [@villa, @booking], html: { class: "simple_form" } do |f| %>
          <div class="mb-3">
            <%= f.label :start_date, "Start Date", class: "form-label" %>
            <%= f.input_field :start_date, as: :string, class: "form-control", type: "date" %>
          </div>
          <div class="mb-3">
            <%= f.label :end_date, "End Date", class: "form-label" %>
            <%= f.input_field :end_date, as: :string, class: "form-control", type: "date" %>
          </div>
          <%= f.hidden_field :villa_id, value: params[:villa_id] %>
          <div class="d-grid">

            <%= f.button :submit, "Submit Request", class: "btn btn-primary btn-sand btn-lg my-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
