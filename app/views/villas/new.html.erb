<div class="container m-5">
  <h1 class="text-center mb-4">Add a Property</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for @villa, html: { class: "simple_form" } do |f| %>
        <div class="mb-3">
          <%= f.label :villa_name, "Name", class: "form-label" %>
          <%= f.input_field :villa_name, as: :string, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :villa_location, "Location", class: "form-label" %>
          <%= f.input_field :villa_location, as: :string, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.input :img_url, as: :url %>
        </div>
        <%= f.hidden_field :villa_id, value: params[:villa_id] %>
        <div class="mb-3">
          <%= f.label :description, "Description", class: "form-label" %>
          <%= f.input_field :description, as: :text, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :price, "Price", class: "form-label" %>
          <%= f.input_field :price, as: :float, class: "form-control" %>
        </div>
        <div class="d-grid">
          <%= f.button :submit, "Add Property", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
