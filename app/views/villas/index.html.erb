<div class="container-main">
  <h1 class="heading-main">All Villas</h1>
  <hr class="divider-show">
</div>

<div class="container-main">
  <div class="row">
    <% @villas.each do |villa| %>
      <div class="col-md-4">
        <div class="card card-trip mb-4">
          <%= link_to image_tag(villa.img_url, alt: villa.villa_name, class: "img-top"), villa_path(villa) %>
             <div class="card-body card-trip-infos">
                <div>
                  <h2 class="card-title"><%= link_to villa.villa_name, villa_path(villa) %></h2>
                  <p class="card-text">Hosted By: <%= villa.user_id %></p>
                </div>
                <div class="d-flex flex-row">
                  <div class="rating-container">
                   <% villa.rating.round.times do %>
                  <i class="fas fa-star star-yellow"></i>
                <% end %>
                <h2 class="card-trip-pricing">Â£<%= villa.price %></h2>
              </div>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
