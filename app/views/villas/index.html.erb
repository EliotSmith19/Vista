<div class="container-main">
  <h1 class="heading-main">All Villas</h1>
  <hr class="divider-show">
</div>

<div class="container-main">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <% @villas.each do |villa| %>
          <div class="col-md-6">
            <div class="card card-trip mb-4 position-relative">
              <%= link_to image_tag(villa.img_url, alt: villa.villa_name, class: "img-top"), villa_path(villa) %>
              <div class="card-body card-trip-infos">
                <div>
                  <h2 class="card-title"><%= link_to villa.villa_name, villa_path(villa) %></h2>
                  <p class="card-text">Hosted By: <%= villa.user.first_name %> <%= villa.user.last_name %></p>
                </div>
                <div class="d-flex flex-row">
                  <div class="rating-container">
                    <% villa.rating.round.times do %>
                      <i class="fas fa-star star-yellow"></i>
                    <% end %>
                    <h2 class="card-trip-pricing">Â£<%= villa.price %></h2>
                  </div>
                  <div class="ms-auto">
                    <% if current_user.favourites.exists?(villa_id: villa.id) %>
                      <%= button_to "â¤ï¸", villa_remove_favourite_path(villa), method: :delete, class: "btn btn-heart" %>
                    <% else %>
                      <%= button_to "ðŸ–¤", villa_add_favourite_path(villa), method: :post, class: "btn btn-heart" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="map-placeholder">
        <p class="text-center text-muted">Map Placeholder</p>
      </div>
    </div>
  </div>
</div>
