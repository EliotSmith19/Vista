<h1>Vista Villas</h1>

<div class="container">
  <div class="cards-info">
    <h2>Find your dream vacation</h2>
  </div>

  <div class="cards">
    <% @villas.each do |villa| %>
      <div class="card-villa">
        <%= link_to villa_path(villa), class: "villa-link" do %>
              <%= villa.villa_name %>
        <% end %>
      </div>
    <% end %>
  </div>
