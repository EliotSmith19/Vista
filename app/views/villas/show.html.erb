<div class="container-main">
  <h3 class="mt-4"><%= link_to "< Back", villas_path %></h3>
</div>

<div class="container-main">
  <div class="villa-card">
    <%= image_tag @villa.img_url %>

    <div class="villa-info">
      <h1><%= @villa.villa_name %></h1>
      <p><em><%= @villa.villa_location %></em></p>
      <p><%= @villa.description %></p>
      <p><strong>£<%= @villa.price %> Per night</strong></p>
      <hr class="divider-show">
      <%= @villa.rating %> <%= '⭐️'* @villa.rating %>
    </div>
    <div>
      <%= link_to "Reserve this villa", new_villa_booking_path(@villa), class: "btn btn-primary btn-sand btn-nav" %>
    </div>
  </div>
</div>

<div class="hosted-card">

  <div class="hosted-info">
    <h4>Hosted by:</h4>
    <p><strong><%= @villa.user.first_name %> <%= @villa.user.last_name %></strong></p>
  </div>
  
  <div class="hosted-image">
    <%= image_tag(@villa.user.img_url) %>
  </div>
</div>
